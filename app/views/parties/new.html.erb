<h1>Viewing Party Goodness</h1>

<%= form_with url: parties_path, method: :post, local: true do |f| %>
  <%= f.label :title, 'Movie Title' %>
  <%= f.text_field :title, value: @movie.title, readonly: true %>
  <%= f.label :duration, 'Duration'  %>
  <%= f.number_field :duration, value: @movie.runtime, min: @movie.runtime %>
  <%= f.label :day, 'Day' %>
  <%= f.date_field :day %>
  <%= f.label :time, 'Time' %>
  <%= f.time_field :time %>
  <%= f.collection_check_boxes(:friend_ids, current_user.friends.all, :id, :name) %>
  <%= f.submit "Create Party" %>
<% end %>
